<sbb-jar>


	<sbb id="storeSbb">
		<description>SBB listening for route to Mt</description>
		<sbb-name>StoreSbb</sbb-name>
		<sbb-vendor>org.mobicents</sbb-vendor>
		<sbb-version>1.0</sbb-version>
		<sbb-alias>StoreSbb</sbb-alias>

		<library-ref>
			<library-name>com.telscale.smsc</library-name>
			<library-vendor>smsc-library</library-vendor>
			<library-version>1.0</library-version>
		</library-ref>
		<library-ref>
			<library-name>library-smpp-server</library-name>
			<library-vendor>library-smpp-server</library-vendor>
			<library-version>1.0</library-version>
		</library-ref>
		<sbb-classes>
			<sbb-abstract-class>
				<sbb-abstract-class-name>org.mobicents.smsc.slee.services.persistence.cassandra.CassandraPersistenceSbb</sbb-abstract-class-name>
			</sbb-abstract-class>
			<sbb-local-interface>
				<sbb-local-interface-name>org.mobicents.smsc.slee.services.persistence.PersistenceLocalObject</sbb-local-interface-name>
			</sbb-local-interface>
		</sbb-classes>

		<resource-adaptor-type-binding>
			<resource-adaptor-type-ref>
				<resource-adaptor-type-name>HectorClientResourceAdaptorType</resource-adaptor-type-name>
				<resource-adaptor-type-vendor>org.mobicents</resource-adaptor-type-vendor>
				<resource-adaptor-type-version>1.0</resource-adaptor-type-version>
			</resource-adaptor-type-ref>

			<resource-adaptor-entity-binding>
				<resource-adaptor-object-name>slee/resources/hector/1.0/provider</resource-adaptor-object-name>
				<resource-adaptor-entity-link>HectorClientResourceAdaptor</resource-adaptor-entity-link>
			</resource-adaptor-entity-binding>
		</resource-adaptor-type-binding>
	</sbb>

